@model Women

<h1>Delete Women</h1>

<form method="POST" asp-controller="Women" asp-action="ConfirmDelete" asp-route-id="@Model.Id">
    <div class="form-group">
        <p>Are you sure to remove Women '@Model.Name'?</p>
    </div>
    
    <div class="form-group">
        <a asp-controller="Women" asp-action="List" class="btn btn-default">Undo</a>
        <input type="submit" class="btn btn-danger" value="Confirm" />
    </div>
</form>