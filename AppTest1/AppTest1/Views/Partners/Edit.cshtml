@model MormonsPartner

<form method="POST">
    <h1>@(Model.Id == 0 ? "New" : "Update") Couple</h1>

    <div class="form-group">
        <label asp-for="ManId" class="control-label"></label>
        <select asp-for="ManId"
                asp-items="@(new SelectList((IEnumerable<MenPartnersOptionModel>)ViewData["partnerMen"],"Id","Name"))"
                class="form-control">
            <option>Please select one</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="WomanId" class="control-label"></label>
        <select asp-for="WomanId"
                asp-items="@(new SelectList((IEnumerable<WomenPartnersOptionModel>)ViewData["partnerWomen"],"Id","Name"))"
                class="form-control">
            <option>Please select one</option>
        </select>
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Save" />
    </div>
</form>